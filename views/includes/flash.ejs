<% if(success && success.length) { %>
    <div class="alert alert-success col-md-6 offset-2 mt-2 alert-dismissible fade show mx-auto" role="alert">
      <strong><%= success %></strong> 
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(del && del.length) { %>
    <div class="alert alert-danger col-md-6 offset-2 mt-2 alert-dismissible fade show mx-auto" role="alert">
      <strong><%= del %></strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if(update && update.length) { %>
    <div class="alert alert-primary col-md-6 offset-2 mt-2 alert-dismissible fade show mx-auto" role="alert">
      <strong><%= update %></strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
<% if(error && error.length) { %>
    <div class="alert alert-warning col-md-6 offset-2 mt-2 alert-dismissible fade show mx-auto" role="alert">
      <strong><%= error %></strong>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
